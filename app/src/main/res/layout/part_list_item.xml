<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/imageProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_vector_test"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imagePro"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pro" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagePro"
                android:maxLength="12"
                android:padding="8dp"
                android:text="ABC"
                android:textColor="#fff"
                android:textStyle="bold" />

            <ImageView
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/Name"
                android:id="@+id/imageOnline"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/online" />


            <TextView
                android:id="@+id/txtOnline"
                android:layout_centerInParent="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageOnline"
                android:maxLength="12"
                android:padding="8dp"
                android:text="Online"
                android:textColor="#fff"

                android:textStyle="bold" />



            <ImageView
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txtOnline"
                android:id="@+id/imageYouHer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_wc" />


            <TextView
                android:id="@+id/txtYouHer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageYouHer"
                android:maxLength="12"
                android:layout_centerInParent="true"

                android:padding="8dp"
                android:text="You &amp; Her"
                android:textColor="#fff"

                android:textStyle="bold" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:textColor="#fff"
            android:textSize="16dp"
            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2">

            <TextView
                android:id="@+id/txtState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:textColor="#fff"
                android:textSize="16dp"
                />

        </RelativeLayout>
<LinearLayout
    android:gravity="end"
    android:weightSum="1"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/rl3"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <Button
        android:id="@+id/btnAccept"
        android:text="Accept"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <Button
        android:id="@+id/btnReject"
        android:text="Reject"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

</LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>